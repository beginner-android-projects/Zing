<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_likedByFragment"
            app:destination="@id/likedByFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_to_left" />
        <action
            android:id="@+id/action_homeFragment_to_commentsFragment"
            app:destination="@id/commentsFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_to_left"/>
        <action
            android:id="@+id/action_homeFragment_to_chatList"
            app:destination="@id/chatListFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_left"/>
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"/>

    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.CreatePostFragment"
        android:label="CreatePostFragment"
        tools:layout="@layout/fragment_create_post"/>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_likedByFragment"
            app:destination="@id/likedByFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_to_left" />
        <action
            android:id="@+id/action_profileFragment_to_commentsFragment"
            app:destination="@id/commentsFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_to_left"/>
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_profileInfo"
            app:destination="@id/profileInfo"
            app:enterAnim="@anim/slide_in_from_bottom"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_to_bottom" />
        <action
            android:id="@+id/action_settingsFragment_to_email"
            app:destination="@id/email"
            app:enterAnim="@anim/slide_in_from_bottom"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_to_bottom" />
        <action
            android:id="@+id/action_settingsFragment_to_currentPasswordVerification"
            app:destination="@id/currentPasswordVerification" />
    </fragment>

    <fragment
        android:id="@+id/othersProfileFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.OthersProfileFragment"
        android:label="OthersProfileFragment"
        tools:layout="@layout/fragment_profile_anim">
        <argument
            android:name="uid"
            app:argType="string"/>
        <action
            android:id="@+id/action_othersProfileFragment_to_likedByFragment"
            app:destination="@id/likedByFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_to_left" />
        <action
            android:id="@+id/action_othersProfileFragment_to_commentsFragment"
            app:destination="@id/commentsFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_to_left"/>
    </fragment>

    <action
        android:id="@+id/globalActionToOthersProfileFragment"
        app:destination="@id/othersProfileFragment"/>

    <fragment
        android:id="@+id/commentsFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.CommentsFragment"
        android:label="CommentsFragment" >
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/likedByFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.LikedByFragment"
        android:label="LikedByFragment" >
        <argument
            android:name="userAdapter"
            app:argType="com.riyazuddin.zing.adapters.UserAdapter" />
    </fragment>
    <fragment
        android:id="@+id/profileInfo"
        android:name="com.riyazuddin.zing.ui.main.fragments.settings.ProfileInfo"
        android:label="ProfileInfo" />
    <fragment
        android:id="@+id/email"
        android:name="com.riyazuddin.zing.ui.main.fragments.settings.Email"
        android:label="Email" />
    <fragment
        android:id="@+id/currentPasswordVerification"
        android:name="com.riyazuddin.zing.ui.main.fragments.settings.CurrentPasswordVerification"
        android:label="CurrentPasswordVerification" >
        <action
            android:id="@+id/action_currentPasswordVerification_to_changePassword"
            app:destination="@id/changePassword"
            app:popUpTo="@id/settingsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/changePassword"
        android:name="com.riyazuddin.zing.ui.main.fragments.settings.ChangePassword"
        android:label="ChangePassword" />
    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.ChatListFragment"
        android:label="Chat" >
        <action
            android:id="@+id/action_chatList_to_newChat"
            app:destination="@id/newChatFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_left"/>
        <action
            android:id="@+id/action_chatList_to_chat"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_left"/>
    </fragment>
    <fragment
        android:id="@+id/newChatFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.NewChatFragment"
        android:label="NewChat" >
        <action
            android:id="@+id/action_newChat_to_chat"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_left"
            app:popUpTo="@id/newChatFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.ChatFragment"
        android:label="Chat" >
        <argument
            android:name="chatFragmentData"
            app:argType="com.riyazuddin.zing.data.ChatFragmentData" />
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.CameraFragment"
        android:label="CameraFragment" >
        <action
            android:id="@+id/action_cameraFragment_to_capturePreviewFragment"
            app:destination="@id/capturePreviewFragment" />
        <argument
            android:name="chatToCamera"
            app:argType="com.riyazuddin.zing.data.ChatToCamera" />
    </fragment>

    <action
        android:id="@+id/globalActionToCameraFragment"
        app:destination="@id/cameraFragment"/>
    <fragment
        android:id="@+id/capturePreviewFragment"
        android:name="com.riyazuddin.zing.ui.main.fragments.CapturePreviewFragment"
        android:label="CapturePreviewFragment" >
        <argument
            android:name="chatToCamera"
            app:argType="com.riyazuddin.zing.data.ChatToCamera" />
    </fragment>

</navigation>